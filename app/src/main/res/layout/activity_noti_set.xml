<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <TextView
            android:id="@+id/tv_join_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15"
            android:text="新消息通知"
            android:textColor="#ff000000"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_join_confirm"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:textColor="#ff808080"
            android:textSize="18sp"
            app:kswTintColor="#F8D347"
            app:layout_constraintBottom_toBottomOf="@+id/tv_join_confirm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_join_confirm" />

        <TextView
            android:id="@+id/tv_voice"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:layout_marginTop="@dimen/y1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15"
            android:text="声音"
            android:textColor="#ff000000"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_join_confirm" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_voice"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:textColor="#ff808080"
            android:textSize="18sp"
            app:kswTintColor="#F8D347"
            app:layout_constraintBottom_toBottomOf="@+id/tv_voice"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_voice" />


        <TextView
            android:id="@+id/tv_zhendong"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:layout_marginTop="@dimen/y1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x15"
            android:text="振动"
            android:textColor="#ff000000"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_voice" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_zhendong"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:textColor="#ff808080"
            android:textSize="18sp"
            app:kswTintColor="#F8D347"
            app:layout_constraintBottom_toBottomOf="@+id/tv_zhendong"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_zhendong" />

    </android.support.constraint.ConstraintLayout>
</layout>