<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/llyt_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/x160"

            android:layout_height="wrap_content"
            android:background="@drawable/bg_msg_more">


            <TextView
                android:id="@+id/tv_new_group"
                android:layout_width="0dp"
                android:layout_height="@dimen/y52"
                android:layout_marginTop="@dimen/y1"
                android:gravity="center"
                android:text="发起群聊"
                android:textColor="#fff"
                android:textSize="@dimen/x17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y17"
                android:layout_marginLeft="@dimen/x13"
                android:background="@mipmap/icon_more_newgruop"
                app:layout_constraintBottom_toBottomOf="@+id/tv_new_group"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_new_group" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x50"
                android:background="#626262"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_new_group"></View>


            <TextView
                android:id="@+id/tv_add_friend"
                android:layout_width="0dp"
                android:layout_height="@dimen/y52"
                android:layout_marginTop="@dimen/y1"
                android:gravity="center"
                android:text="添加好友"
                android:textColor="#fff"
                android:textSize="@dimen/x17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_new_group" />

            <ImageView
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/y20"
                android:layout_marginLeft="@dimen/x13"
                android:background="@mipmap/icon_more_add_friend"
                app:layout_constraintBottom_toBottomOf="@+id/tv_add_friend"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_add_friend" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x50"
                android:background="#626262"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_friend"></View>


            <TextView
                android:id="@+id/tv_scan"
                android:layout_width="0dp"
                android:layout_height="@dimen/y52"
                android:layout_marginTop="@dimen/y1"
                android:gravity="center"
                android:text="添加好友"
                android:textColor="#fff"
                android:textSize="@dimen/x17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_friend" />

            <ImageView
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/y20"
                android:layout_marginLeft="@dimen/x13"
                android:background="@mipmap/icon_more_scan"
                app:layout_constraintBottom_toBottomOf="@+id/tv_scan"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_scan" />


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</layout>