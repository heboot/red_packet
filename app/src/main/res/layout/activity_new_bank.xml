<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            android:background="#f2f2f2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/y33"
            android:text="请绑定持卡人本人的银行卡"
            android:textColor="#ff808080"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar" />


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y55"
            android:background="#d2d2d2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"></View>

        <EditText
            android:id="@+id/et_bank_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/y44"
            android:layout_marginTop="@dimen/y56"
            android:background="#fff"
            android:paddingLeft="@dimen/x80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="开户行"
            android:textColor="#ff000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_bank_name"
            app:layout_constraintLeft_toLeftOf="@+id/et_bank_name"
            app:layout_constraintTop_toTopOf="@+id/et_bank_name" />


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:background="#d2d2d2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_bank_name"></View>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/y44"
            android:layout_marginTop="@dimen/y1"
            android:background="#fff"
            android:paddingLeft="@dimen/x80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_bank_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="持卡人"
            android:textColor="#ff000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_name"
            app:layout_constraintLeft_toLeftOf="@+id/et_name"
            app:layout_constraintTop_toTopOf="@+id/et_name" />


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:background="#d2d2d2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name"></View>


        <EditText
            android:id="@+id/et_number"
            android:layout_width="0dp"
            android:layout_height="@dimen/y44"
            android:layout_marginTop="@dimen/y1"
            android:background="#fff"
            android:inputType="number"
            android:paddingLeft="@dimen/x80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="卡号"
            android:textColor="#ff000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_number"
            app:layout_constraintLeft_toLeftOf="@+id/et_number"
            app:layout_constraintTop_toTopOf="@+id/et_number" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:background="#d2d2d2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_number"></View>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/x335"
            android:layout_height="@dimen/y45"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/bg_rect_f8d347_23"
            android:gravity="center"
            android:text="确定"
            android:textColor="#1F2732"
            android:textSize="@dimen/x18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_number" />

    </android.support.constraint.ConstraintLayout>


</layout>