<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <EditText
            android:id="@+id/et_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:background="#fff"
            android:paddingLeft="@dimen/x15"
            android:textSize="@dimen/x18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/y17"
            android:layout_marginRight="@dimen/x15"
            android:background="@mipmap/icon_clear"
            app:layout_constraintBottom_toBottomOf="@+id/et_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_text" />

    </android.support.constraint.ConstraintLayout>
</layout>