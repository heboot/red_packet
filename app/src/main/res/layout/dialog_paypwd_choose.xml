<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/x320"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y100"
            android:background="@drawable/bg_rect_white_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="请输入支付密码"
                android:textColor="#ff000000"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_close"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y18"
                android:layout_marginTop="@dimen/y22"
                android:layout_marginRight="@dimen/x22"
                android:background="@mipmap/icon_dialog_colose"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y70"
                android:text="提现"
                android:textColor="#ff000000"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y110"
                android:text="88.54"
                android:textColor="#ff000000"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginRight="@dimen/x20"
                android:background="#ffe5e5e5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_money"></View>

            <LinearLayout
                android:id="@+id/llyt_pwd"
                android:layout_width="0dp"
                android:layout_height="@dimen/y48"
                android:layout_marginLeft="@dimen/x19"
                android:layout_marginTop="@dimen/y64"
                android:layout_marginRight="@dimen/x19"
                android:layout_marginBottom="@dimen/y33"
                android:background="@drawable/bg_rect_paypwd_border"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_money">


                <TextView
                    android:id="@+id/tv_p1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/x38" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="#D2D2D2"></View>

                <TextView
                    android:id="@+id/tv_p2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/x38" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="#D2D2D2"></View>

                <TextView
                    android:id="@+id/tv_p3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/x38" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="#D2D2D2"></View>

                <TextView
                    android:id="@+id/tv_p4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/x38" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="#D2D2D2"></View>

                <TextView
                    android:id="@+id/tv_p5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/x38" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:background="#D2D2D2"></View>

                <TextView
                    android:id="@+id/tv_p6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/x38" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#00000000"
                app:layout_constraintBottom_toBottomOf="@+id/llyt_pwd"
                app:layout_constraintLeft_toLeftOf="@+id/llyt_pwd"
                app:layout_constraintRight_toRightOf="@+id/llyt_pwd"
                app:layout_constraintTop_toTopOf="@+id/llyt_pwd" />


        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</layout>