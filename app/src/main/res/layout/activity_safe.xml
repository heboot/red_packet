<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            android:background="#f2f2f2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <TextView
            android:id="@+id/tv_add_enable_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:layout_marginTop="@dimen/y10"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/x15"
            android:text="允许加我为好友"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_add_enable"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:textColor="#ff808080"
            android:textSize="18sp"
            app:kswTintColor="#F8D347"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_enable_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_enable_title" />

        <TextView
            android:id="@+id/tv_verify_enable_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:layout_marginTop="@dimen/y1"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/x15"
            android:text="加我为朋友时需要验证"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_enable_title" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_vreify_enable"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:textColor="#ff808080"
            android:textSize="18sp"
            app:kswTintColor="#F8D347"
            app:layout_constraintBottom_toBottomOf="@+id/tv_verify_enable_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_verify_enable_title" />


        <TextView
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="0dp"
            android:layout_height="@dimen/y42"
            android:gravity="left|center_vertical"
            android:text="添加我的方式"
            android:textColor="#ff808080"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_verify_enable_title" />


        <TextView
            android:id="@+id/tv_phone_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:layout_marginTop="@dimen/y42"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/x15"
            android:text="手机号"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_verify_enable_title" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_phone_enable"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:textColor="#ff808080"
            android:textSize="18sp"
            app:kswTintColor="#F8D347"
            app:layout_constraintBottom_toBottomOf="@+id/tv_phone_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_phone_title" />

        <TextView
            android:id="@+id/tv_jy_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/y55"
            android:layout_marginTop="@dimen/y1"
            android:background="#fff"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/x15"
            android:text="简易号"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone_title" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_jy_enable"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:textColor="#ff808080"
            android:textSize="18sp"
            app:kswTintColor="#F8D347"
            app:layout_constraintBottom_toBottomOf="@+id/tv_jy_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_jy_title" />

    </android.support.constraint.ConstraintLayout>
</layout>